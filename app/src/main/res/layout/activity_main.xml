<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textSize="50dp"
        android:height="80dp"
        android:width="120dp"
        android:onClick="number0"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"

        android:text="0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:height="80dp"
        android:width="100dp"
        android:textSize="50dp"
        android:onClick="number1"
        android:paddingBottom="10dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"


        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:width="100dp"
        android:height="80dp"
        android:textSize="50dp"
        android:layout_toRightOf="@id/btn1"
        android:layout_alignBaseline="@id/btn1"
        android:text="2"
        android:onClick="number2"
    />
    <Button
        android:id="@+id/btn3"
        android:height="80dp"
        android:width="100dp"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn2"
        android:layout_alignBaseline="@id/btn2"
        android:onClick="number3"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_above="@id/btn1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:height="80dp"
        android:width="100dp"
        android:onClick="number4"
        android:textSize="50dp"

        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="number5"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:textSize="50dp"
        android:height="80dp"
        android:width="100dp"
        android:layout_above="@id/btn2"
        android:layout_toRightOf="@id/btn4"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/btn3"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginLeft="40dp"
        android:height="80dp"
        android:width="100dp"
        android:textSize="50dp"
        android:text="6"
        android:onClick="number6"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn4"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:onClick="number7"
        android:height="80dp"
        android:width="100dp"
        android:textSize="50dp"

        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn5"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn7"
        android:height="80dp"
        android:width="100dp"
        android:textSize="50dp"
        android:onClick="number8"
        android:layout_marginBottom="10dp"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn6"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:height="80dp"
        android:width="100dp"
        android:layout_marginBottom="10dp"
        android:textSize="50dp"
        android:layout_toRightOf="@id/btn8"

        android:onClick="number9"
        android:text="9" />

    <Button
        android:id="@+id/btnResult"
        android:height="80dp"
        android:width="120dp"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btn0"
        android:layout_alignBaseline="@id/btn0"
        android:onClick="numberResult"
        />
    <Button
        android:id="@+id/btnAC"
        android:height="80dp"
        android:width="120dp"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/btnResult"
        android:layout_alignBaseline="@id/btn0"
        android:onClick="numberAC"
        />
    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn7"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:onClick="numberIncrease"
        android:height="80dp"
        android:width="40dp"
        android:textSize="50dp"
        android:text="+" />
    <Button
        android:id="@+id/btnLess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn7"
        android:layout_toRightOf="@id/btnIncrease"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="numberLess"
        android:height="80dp"
        android:width="40dp"
        android:textSize="50dp"
        android:text="-" />
    <Button
        android:id="@+id/btnMult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn7"
        android:layout_toRightOf="@id/btnLess"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="numberMult"
        android:height="80dp"
        android:width="40dp"
        android:textSize="50dp"
        android:text="*" />
    <Button
        android:id="@+id/btnExcept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn7"
        android:layout_toRightOf="@id/btnMult"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="numberExcept"
        android:height="80dp"
        android:width="40dp"
        android:textSize="50dp"
        android:text="/" />
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnIncrease"
        android:textSize="75dp"
        android:gravity="right"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv"
        android:visibility="invisible"

        android:textSize="75dp"
        />



</RelativeLayout>